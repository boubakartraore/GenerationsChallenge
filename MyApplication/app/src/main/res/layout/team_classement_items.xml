<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/classementCard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:layout_margin="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/classementPos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.075"
                android:text="10" />

            <TextView
                android:id="@+id/classementName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="0.4"
                android:text="AFC" />

            <TextView
                android:id="@+id/classementPts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.075"
                android:text="Pts" />

            <TextView
                android:id="@+id/classementPlayed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.075"
                android:text="J" />

            <TextView
                android:id="@+id/classementVictory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.075"
                android:text="V" />

            <TextView
                android:id="@+id/classementTie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.075"
                android:text="N" />

            <TextView
                android:id="@+id/classementDefeat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.075"
                android:text="D" />

            <TextView
                android:id="@+id/classementGoalScored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.075"
                android:text="BM" />

            <TextView
                android:id="@+id/classementGoalConceded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.075"
                android:text="BP" />

            <TextView
                android:id="@+id/classementDifference"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.075"
                android:text="+/-" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>