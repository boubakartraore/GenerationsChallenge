<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/register2Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Qui Ãªtes vous ?"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

                android:textSize="50dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/register2TeamImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#8873fd"
                    app:srcCompat="@drawable/capitaine" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/register2TextTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="Un Capitaine ?" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/register2JoueurImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#8873fd"
                    app:srcCompat="@drawable/capitaine" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/register2TextJoueur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="Un Joueur ?" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>