<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bacar.generationschallenge">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Controller.Authentification.LoginActivity" />
        <activity android:name=".Controller.Authentification.RegisterActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Controller.Team.TeamInfoActivity" />
        <activity android:name=".Controller.Team.PlayersActivity" />
        <activity android:name=".Controller.Season.ResultActivity"></activity>
        <activity android:name=".Controller.Season.TeamCalendarActivity"></activity>
        <activity android:name=".Controller.Classement.AllButeursClassementActivity" />
        <activity android:name=".Controller.Season.CalendarActivity" />
        <activity android:name=".Controller.Authentification.RegisterPart1"></activity>
        <activity android:name=".Controller.Authentification.RegisterInviteActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".Controller.Authentification.RegisterPart2Activity"></activity>
        <activity android:name=".Controller.Authentification.RegisterTeamActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".Controller.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Test.NavMainActivity"
            android:label="@string/title_activity_nav_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>